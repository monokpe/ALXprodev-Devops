#!/bin/bash

if [ ! -f "data.json" ]; then
	  echo "Error: data.json not found. Please run apiAutomation-0x00 first."
	    exit 1
fi

jq -r '.name + "|" + .types[0].type.name + "|" + (.weight|tostring) + "|" + (.height|tostring)' data.json | \
	sed 's/^\(.\)/\u\1/' | \
	awk -F'|' '{
    name = $1;
        type = $2;
	    weight_kg = $3 / 10;
	        height_m = $4 / 10;
		    printf "%s is of type %s, weighs %skg, and is %sm tall.\n", name, type, weight_kg, height_m
	    }'
