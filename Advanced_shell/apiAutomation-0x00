#!/bin/bash

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
SUCCESS_FILE="data.json"
ERROR_FILE="errors.txt"

if curl -sS -f "${API_URL}" > "${SUCCESS_FILE}" 2> "${ERROR_FILE}"; then
    rm -f "${ERROR_FILE}"
    echo "API request successful. Data saved to ${SUCCESS_FILE}"
else
    rm -f "${SUCCESS_FILE}"
    echo "API request failed. Error logged to ${ERROR_FILE}"
fi
