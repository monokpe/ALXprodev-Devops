#!/bin/bash

POKEMON_LIST=("Bulbasaur" "Ivysaur" "Venusaur" "Charmander" "Charmeleon" "Charizard")
OUTPUT_DIR="pokemon_data"

mkdir -p "$OUTPUT_DIR"

for pokemon in "${POKEMON_LIST[@]}"; do
    lowercase_name=${pokemon,,}
    API_URL="https://pokeapi.co/api/v2/pokemon/${lowercase_name}"
    OUTPUT_FILE="${OUTPUT_DIR}/${lowercase_name}.json"

    echo "Fetching data for ${lowercase_name}..."

    if curl -sS -f -o "${OUTPUT_FILE}" "${API_URL}"; then
        echo "Saved data to ${OUTPUT_FILE} "
    else
        echo "Failed to fetch data for ${lowercase_name} "
        rm -f "${OUTPUT_FILE}"
    fi

    sleep 1
done
